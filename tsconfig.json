{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "Node16",
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": false,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "@Common":["src/"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  